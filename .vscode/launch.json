{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--env-file=.env", "-r", "ts-node/esm"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "autoAttachChildProcesses": true,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach Vitest",
      "port": 9229,
      "restart": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}
